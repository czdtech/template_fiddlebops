  alt, 
  loading = 'lazy',
  className = 'border-accent'
} = Astro.props;

const imageProps = {
  src,
  alt,
  width: 1200,
  height: 800,
  quality: 80,
  widths: [300, 600, 900],
  sizes: "(max-width: 768px) 100vw, 50vw",
  formats: ["avif", "webp", "jpg"],
  loading,
  decoding: "async"
};

<Image
  {...imageProps}
  class={`rounded-xl shadow-lg border-2 sm:border-4 ${className} transform hover:scale-[1.02] transition-standard`}
/> 
