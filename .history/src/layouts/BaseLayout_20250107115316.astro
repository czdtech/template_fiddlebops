---
import "../styles/global.css"; // 确保引入全局样式
import gamePreview from "/src/assets/FiddleBops.webp";

// 建议添加类型定义
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="keywords"
      content="FiddleBops, 音乐游戏, 音乐创作, 在线游戏, Incredibox"
    />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="https://fiddlebops.com" />
    <link
      rel="stylesheet"
      href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css"
      media="print"
      onload="this.media='all'"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:image" content={gamePreview.src} />

    {/* 预加载关键资源 */}
    <link rel="prefetch" href={gamePreview.src} as="image" type="image/webp" />

    {/* 告诉浏览器使用渐进式加载 */}
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />

    {/* 指示浏览器预连接到游戏域名 */}
    <link rel="preconnect" href="https://silkycell.github.io" />

    <style>
      /* 预防 FOUT (Flash of Unstyled Text) */
      .fas {
        opacity: 0;
      }
      .fonts-loaded .fas {
        opacity: 1;
        transition: opacity 0.2s;
      }
    </style>
    <script>
      // 字体加载完成后添加标记类
      if ("fonts" in document) {
        Promise.all<[Promise<FontFace[]>, Promise<void>]>([
          document.fonts.load("900 1em 'Font Awesome 5 Free'"),
          new Promise<void>((resolve) => {
            const link = document.querySelector(
              'link[rel="stylesheet"][href*="fontawesome"]'
            );
            if (link) {
              (link as HTMLLinkElement).addEventListener("load", () =>
                resolve()
              );
            } else {
              resolve();
            }
          }),
        ]).then(() => {
          document.documentElement.classList.add("fonts-loaded");
        });
      }
    </script>
  </head>
  <body
    class="bg-gradient-radial from-background via-background-light to-background text-text min-h-screen"
  >
    <div
      class="bg-gradient-to-b from-transparent to-background/50 min-h-screen"
    >
      <slot />
    </div>
  </body>
</html>
