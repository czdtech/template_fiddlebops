---
const features = [
  {
    icon: "hand-pointer",
    title: "直观的界面",
    description: "用户友好的拖放界面，简化音乐创作过程。"
  },
  {
    icon: "user-friends",
    title: "独特的角色",
    description: "多种粉丝创作的角色可供选择，每个角色都有自己独特的声音和个性。"
  },
  {
    icon: "music",
    title: "声音混合",
    description: "鼓励尝试不同的角色组合，解锁隐藏的旋律，创作原创作品。"
  },
  {
    icon: "users",
    title: "社区互动",
    description: "建立活跃的社区，玩家可以在这里分享作品，探索他人的作品，并参与挑战。"
  },
  {
    icon: "sync-alt",
    title: "定期更新",
    description: "根据社区反馈，不断更新新的角色、声音和功能。"
  }
];
---

<section class="mb-16 py-12 rounded-lg">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold font-display text-accent mb-8">核心功能</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="bg-card hover:bg-card-hover backdrop-blur-sm rounded-lg p-6 transition-all duration-300">
          <i class={`fas fa-${feature.icon} text-4xl text-accent mb-4`}></i>
          <h3 class="font-bold text-xl mb-2 text-secondary">{feature.title}</h3>
          <p class="text-text">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 