---
interface Props {
  mainId?: string;
  label?: string;
  class?: string;
}

const {
  mainId = "main-content",
  label = "跳转到主要内容",
  class: className = "",
} = Astro.props;
---

<a
  href={`#${mainId}`}
  class:list={[
    "sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-md focus:shadow-lg",
    className,
  ]}
>
  {label}
</a>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
